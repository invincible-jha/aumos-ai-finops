# ============================================================================
# AumOS AI FinOps â€” Environment Variables
# Copy to .env and fill in your values for local development.
# NEVER commit .env to version control.
# ============================================================================

# --- Standard AumOS settings ---
AUMOS_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/aumos_finops
AUMOS_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
AUMOS_REDIS_URL=redis://localhost:6379/0
AUMOS_ENVIRONMENT=development
AUMOS_LOG_LEVEL=INFO
AUMOS_SECRET_KEY=dev-secret-key-change-in-production
AUMOS_JWT_ALGORITHM=HS256

# --- OpenCost integration ---
AUMOS_FINOPS_OPENCOST_BASE_URL=http://opencost-service:9090
AUMOS_FINOPS_OPENCOST_ENABLED=true

# --- KubeCost integration (optional) ---
AUMOS_FINOPS_KUBECOST_BASE_URL=http://kubecost-service:9090
AUMOS_FINOPS_KUBECOST_ENABLED=false

# --- HTTP client settings ---
AUMOS_FINOPS_COST_PROVIDER_TIMEOUT_SECONDS=30

# --- Budget alerting ---
AUMOS_FINOPS_DEFAULT_BUDGET_ALERT_THRESHOLD=0.80
AUMOS_FINOPS_CRITICAL_BUDGET_ALERT_THRESHOLD=0.95

# --- ROI calculation ---
AUMOS_FINOPS_ROI_LOOKBACK_DAYS=30
AUMOS_FINOPS_DEFAULT_HOURLY_RATE_USD=75.0

# --- GPU pricing (USD per hour) ---
AUMOS_FINOPS_GPU_COST_PER_HOUR_A100=2.21
AUMOS_FINOPS_GPU_COST_PER_HOUR_H100=4.76
AUMOS_FINOPS_GPU_COST_PER_HOUR_T4=0.35

# --- Token pricing (USD per 1M tokens) ---
AUMOS_FINOPS_TOKEN_COST_PER_MILLION_INPUT_TIER1=15.0
AUMOS_FINOPS_TOKEN_COST_PER_MILLION_INPUT_TIER2=3.0
AUMOS_FINOPS_TOKEN_COST_PER_MILLION_INPUT_TIER3=0.10

# --- Routing optimization weights (must sum to 1.0) ---
AUMOS_FINOPS_ROUTING_COST_WEIGHT=0.4
AUMOS_FINOPS_ROUTING_QUALITY_WEIGHT=0.4
AUMOS_FINOPS_ROUTING_LATENCY_WEIGHT=0.2
